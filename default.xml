<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Remote for LineageOS -->
  <remote name="lineage"
          fetch="https://github.com/LineageOS/"
          review="https://review.lineageos.org/" />

  <!-- local remote for Fodon -->
  <remote name="fodon"
          fetch="https://github.com/Fodon-cf/" />
  
  <default remote="lineage"
           revision="lineage-20.0"
           sync-j="4" />

  <!-- Android -->
  <project name="android_build" path="build" remote="lineage" />
  <project name="android_frameworks_base" path="frameworks/base" remote="lineage" />
  <project name="android_system_core" path="system/core" remote="lineage" />

  <!-- NikGApps -->
  <project name="NikGApps/packages_gapps_full" path="vendor/gapps" remote="github" revision="android-13.0" />

</manifest>
